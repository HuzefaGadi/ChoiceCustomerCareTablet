<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp">

    <TextView
        android:id="@+id/queue_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/queue_item_imv"
        android:layout_toStartOf="@+id/queue_item_imv"
        android:textColor="@color/black"
        android:textSize="@dimen/queue_item_text"/>

    <TextView
        android:id="@+id/queue_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/queue_item_text"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/queue_item_imv"
        android:layout_toStartOf="@+id/queue_item_imv"
        android:textColor="@color/black"
        android:textSize="@dimen/queue_item_time"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/queue_item_imv"
        android:layout_width="@dimen/queue_item_imv"
        android:layout_height="@dimen/queue_item_imv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_action_accept"/>
</RelativeLayout>